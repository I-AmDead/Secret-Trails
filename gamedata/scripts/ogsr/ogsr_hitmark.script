end

function remove_dead_hitmarker2()
	for i=1, 4 do
		local hud = get_hud()
		if hud:GetCustomStatic("hud_xmark_dead_1"..i) then
			hud:RemoveCustomStatic("hud_xmark_dead_1"..i) 
