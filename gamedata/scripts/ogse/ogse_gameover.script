function attach(sm)
	sm:subscribe({signal = "on_update", fun = this.actor_dead})
end

function actor_dead()

	if not db.actor:alive() then
		if not has_alife_info("actor_dead_now") then
			level.hide_indicators()
			get_console():execute("time_factor 0.2")
			db.actor:give_info_portion("actor_dead_now")
		end
	end
end