function attach( sm )
  sm:subscribe({ signal = "on_spawn", fun = this.on_game_load })
end


local subscribed
function subscribe_update()
  subscribed = { signal = "on_update", fun = this.on_actor_upade }
  ogse_signals.get_mgr():subscribe( subscribed )
end


function load_gps_labels()
  local labels = amk.load_table( "gps_labels" )
  for k, v in pairs( labels ) do
    subscribe_update()
    break
  end
  return labels
end


function save_gps_labels( labels )
  local found = false
  for k, v in pairs( labels ) do
    found = true
    break
  end
  if found then
    if not subscribed then
      subscribe_update()
    end
  elseif subscribed then
    ogse_signals.get_mgr():unsubscribe( subscribed )
    subscribed = nil
  end
  amk.save_table( "gps_labels", labels )
end



