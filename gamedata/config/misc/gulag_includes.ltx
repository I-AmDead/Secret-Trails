active = rest@rest

[rest@rest]
path_rest = rest
meet_talk_enabled = true
on_signal = rest_end | {~50} walker@rest, {~100} sleeper@rest

[walker@rest]
path_walk = rest_walk
path_look = rest_look
meet_enabled = true
on_timer  = 50000 | {~50} rest@rest, {~100} sleeper@rest

[sleeper@rest]
path_main = sleep
on_timer  = 100000 | {~50} walker@rest, {~100} rest@rest