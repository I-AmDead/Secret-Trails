;--------------------------------------
; Rulix aka Bak
; Настройки разных модулей
;--------------------------------------

[sound]	;вероятностиотыгрываниязвука
death_probability                        = 40 ;%
friendlyfire_probability                 = 60 ;%

[npc_eating]
enabled                                  = off ;дублирует схему bandage
excluded_communities                     = zombied
excluded_npcs                            = none
medkit_health                            = 60 ;кушаем аптечку если здоровье меньше, %
bandage_bleeding                         = 0.2 ;кушаем бинт, если кровотечение больше
medkits                                  = medkit, medkit_army, medkit_scientic ;аптечки или то чем можно лечиться
bandages                                 = bandage ;бинты
in_combat                                = false ;лечиться в бою
out_combat                               = true ;лечиться вне боя
delay                                    = 14000, 26000 ;мин. и максимальная задержка перед лечением

; дублирует аналогичную движковую фичу, см. параметры holder_range_modifier,holder_fov_modifier

[look_into_os]
enabled                                  = off
excluded_communities                     = zombied
excluded_npcs                            = none

; для 2x оптики
range_add                                = 30 ;%
fov_add                                  = -20 ;%

;--------------------------------------
; Модуль rx_combat
;--------------------------------------

[combat]
run_on_hit                               = true ;при получении ранения перемещаться в укрытие бегом
monster_defend                           = true ;схема обороны от монстров

;--------------------------------------
; Настройки модуля rx_ff
;--------------------------------------

[ff]
forbidden_factions                       = zombied, monolith ;название группировки
forbidden_npcs                           = none ;имя персонажа

;--------------------------------------
; Настройки модуля rx_reload
;--------------------------------------

[reload]
enabled                                  = true ;включить
reload_one                               = false ;перезаряжать только текущее оружие
elapsed_percent                          = 75 ;процент загруженности магазина, при котором перезарядка не требуется
clean_gun                                = 10 ;чинить оружие при перезарядке на % состояния

