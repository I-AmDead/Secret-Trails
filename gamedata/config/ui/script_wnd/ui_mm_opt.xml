<window>
  <background x="0" y="0" width="1024" height="768" stretch="1">
    <texture width="1920" height="1080">ui\menu_video</texture>
  </background>

  <main_dialog>
    <frame_buttons x="262" y="5" width="500" height="70"></frame_buttons>

    <btn_item x="0" y="0" width="125" height="47" stretch="1" check_mode="1">
      <text align="c" vert_align="c" font="letterica18">PAGE</text>
      <text_color>
        <e r="117" g="114" b="97"/>
        <t r="191" g="191" b="191"/>
        <d r="128" g="128" b="128"/>
        <h r="0" g="255" b="0"/>
      </text_color>
    </btn_item>

    <dialog x="0" y="0" width="1024" height="768" stretch="1">
      <texture>ui_menu_options_dlg</texture>
    </dialog>

    <dialog_ingame x="0" y="0" width="1024" height="768" stretch="1"></dialog_ingame>

    <btn_ingame x="460" y="730" width="111" height="29">
      <text align="c" vert_align="c" font="letterica16">ui_mm_ingame</text>
      <texture>ui_button_ordinary</texture>
    </btn_ingame>

    <btn_accept x="685" y="740" width="80" height="20" stretch="1">
      <text x="-25" align="r" vert_align="c" font="letterica18">ui_mm_apply</text>
      <texture>ui_button_forward</texture>
    </btn_accept>
    <btn_cancel x="270" y="740" width="80" height="20" stretch="1">
      <text x="25" align="l" vert_align="c" font="letterica18">ui_mm_cancel</text>
      <texture>ui_button_back</texture>
    </btn_cancel>
  </main_dialog>

  <option_adv>
    <scroll_v x="0" y="0" width="500" height="640" right_ident="0" left_ident="0" top_indent="0" bottom_indent="0" vert_interval="4" always_show_scroll="1" flip_vert="1"/>

    <templ_item width="500" height="40" stretch="1">

    </templ_item>

    <cap_item_back x="0" y="0" width="249" height="40" stretch="1">
      <texture>ui_actor_news</texture>
    </cap_item_back>

    <cap_key_back x="251" y="0" width="248" height="40" stretch="1">
      <texture>ui_actor_news</texture>
    </cap_key_back>

    <cap_item x="5" y="5" width="243" height="40">
      <text vert_align="c" x="5" y="-5" font="letterica16" r="215" g="195" b="170">cap_item</text>
    </cap_item>

    <sep_item x="0" y="5" width="500" height="40" stretch="1" color_alpha="30" complex_mode="1">
      <text align="c" vert_align="c" font="letterica18" r="215" g="195" b="170">sep_item</text>
      <texture></texture>
    </sep_item>

    <check_item x="280" y="5" width="30" height="40"></check_item>

    <track_item x="280" y="20" width="190" height="20" invert="0" step="1">
      <output_wnd x="0" y="-15" width="190" height="40">
        <text font="letterica16" align="c" vert_align="t"/>
      </output_wnd>
    </track_item>

    <btn_1 x="258" y="19" width="20" height="20" stretch="1">
      <texture>ui_slider_button</texture>
    </btn_1>

    <btn_2 x="472" y="19" width="20" height="20" stretch="1">
      <texture>ui_slider_button</texture>
    </btn_2>

    <list_item x="280" y="5" width="190" height="40" list_length="4" always_show_scroll="1">
      <text_color>
        <e r="216" g="186" b="140" />
        <d r="227" g="199" b="178" />
      </text_color>
      <list_font_s r="240" g="217" b="182" />
      <list_font r="216" g="186" b="140" font="letterica16" />
    </list_item>
  </option_adv>

  <tab_controls>
    <cap_item_back x="0" y="0" width="249" height="40" stretch="1">
      <texture>ui_actor_news</texture>
    </cap_item_back>

    <cap_key_back x="251" y="0" width="248" height="40" stretch="1">
      <texture>ui_actor_news</texture>
    </cap_key_back>

    <cap_mousesens x="5" y="10" width="243" height="40">
      <text vert_align="c" x="5" y="-10" font="letterica16" r="215" g="195" b="170">ui_mm_mouse_sense</text>
    </cap_mousesens>
	
    <track_mousesens x="280" y="20" width="190" height="20" step="0.01">
      <options_item entry="mouse_sens" group="mm_opt_controls"/>
      <output_wnd x="0" y="-15" width="190" height="40">
        <text font="letterica16" align="c" vert_align="t"/>
      </output_wnd>
    </track_mousesens>

    <key_binding x="0" y="0" width="750" height="900">
      <!-- headers -->
      <header_1 x="0" y="0" width="229" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_1>
      <header_2 x="400" y="0" width="102" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_2>
      <header_3 x="400" y="0" width="102" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_3>

      <frame x="0" y="20" width="700" height="650">
        <texture></texture>
      </frame>

      <scroll_view x="0" y="60" width="500" height="580" always_show_scroll="1" vert_interval="4">
        <item_group align="c" x="0" y="0" width="500" height="50" stretch="1">
          <text align="c" vert_align="c" font="letterica18" r="215" g="195" b="170"/>
        </item_group>

        <item_key x="0" y="0" width="550" height="40" stretch="1">
          <text vert_align="c" x="10" y="0" font="letterica16" r="215" g="215" b="215"/>
          <texture>ui_actor_news</texture>
        </item_key>
      </scroll_view>

    </key_binding>

    <btn_default x="550" y="730" width="111" height="29">
      <text align="c" font="letterica16" r="227" g="199" b="178">ui_mm_default</text>
      <texture>ui_button_ordinary</texture>
    </btn_default>
  </tab_controls>

  <frame x="0" y="0" width="1024" height="768">
    <texture></texture>
  </frame>
  <frame_hint x="0" y="0" width="160" height="768" light_anim="ui_btn_hint" la_texture="0" la_text="1" la_alpha="1">
    <texture>ui_icons_PDA_dialog</texture>
  </frame_hint>

  <hint_description x="3" y="3" width="150" height="35">
    <text align="c" font="letterica18" r="255" g="255" b="255" complex_mode="1">hint_name_text</text>
  </hint_description>
</window>