<window>
  <background x="0" y="0" width="1024" height="768" stretch="1">
    <texture width="1920" height="1080">ui\menu_video</texture>
  </background>

  <main_dialog>
    <scroll_buttons x="575" y="330" width="123" height="300" right_ident="0" left_ident="0" top_indent="0" bottom_indent="0" vert_interval="5" always_show_scroll="0" flip_vert="0">
    </scroll_buttons>

    <btn_item x="0" y="0" width="111" height="29" check_mode="1">
      <text font="letterica16" align="c">PAGE</text>
      <texture>ui_button_ordinary</texture>
    </btn_item>

    <dialog x="0" y="0" width="1024" height="768" stretch="1">
      <texture>ui_menu_options_dlg</texture>
    </dialog>

    <dialog_ingame x="0" y="0" width="1024" height="768" stretch="1"></dialog_ingame>

    <btn_ingame x="570" y="730" width="111" height="29">
      <text font="letterica16" align="c">ui_mm_ingame</text>
      <texture>ui_button_ordinary</texture>
    </btn_ingame>

    <btn_accept x="712" y="730" width="111" height="29">
      <text align="c" font="letterica16" r="227" g="199" b="178">ui_mm_apply</text>
      <texture>ui_button_ordinary</texture>
    </btn_accept>
    <btn_cancel x="900" y="730" width="111" height="29">
      <text align="c" font="letterica16" r="227" g="199" b="178">ui_mm_cancel</text>
      <texture>ui_button_ordinary</texture>
    </btn_cancel>
  </main_dialog>

  <option_adv>
    <scroll_v x="0" y="0" width="700" height="680" right_ident="0" left_ident="0" top_indent="0" bottom_indent="0" vert_interval="10" always_show_scroll="1" flip_vert="1"/>

    <templ_item width="700" height="30" />

    <cap_item x="5" y="5" width="243" height="20">
      <text font="letterica16" r="215" g="195" b="170" vert_align="c">cap_item</text>
    </cap_item>

    <sep_item x="0" y="5" width="400" height="20" stretch="1" color_alpha="30">
      <text font="ui_font_arial_21" r="215" g="195" b="170" vert_align="c" align="c">sep_item</text>
      <texture>ui_white_rect</texture>
    </sep_item>

    <check_item x="249" y="5" width="30" height="20">
    </check_item>

    <track_item x="249" y="5" width="190" height="20" invert="0" step="1">
    </track_item>

    <list_item x="249" y="5" width="190" height="20" list_length="4" always_show_scroll="1">
      <text_color>
        <e r="216" g="186" b="140" />
        <d r="227" g="199" b="178" />
      </text_color>
      <list_font_s r="240" g="217" b="182" />
      <list_font r="216" g="186" b="140" font="letterica16" />
    </list_item>
  </option_adv>

  <tab_controls>

    <key_binding x="0" y="0" width="750" height="900">
      <!-- headers -->
      <header_1 x="0" y="0" width="229" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_1>
      <header_2 x="400" y="0" width="102" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_2>
      <header_3 x="400" y="0" width="102" height="17">
        <text x="2" y="3" font="letterica16" r="215" g="195" b="170"></text>
        <texture>ui_fakebtn</texture>
      </header_3>

      <frame x="0" y="20" width="700" height="650">
        <texture></texture>
      </frame>

      <scroll_view x="0" y="30" width="700" height="680" always_show_scroll="1" vert_interval="0">
        <item_group x="0" y="0" width="550" height="50">
          <text x="10" y="20" font="letterica16" r="215" g="195" b="170"/>
        </item_group>

        <item_key x="0" y="0" width="550" height="18">
          <text x="10" y="0" font="letterica16" r="215" g="215" b="215"/>
        </item_key>
      </scroll_view>

    </key_binding>

    <btn_default x="550" y="730" width="111" height="29">
      <text align="c" font="letterica16" r="227" g="199" b="178">ui_mm_default</text>
      <texture>ui_button_ordinary</texture>
    </btn_default>
  </tab_controls>

  <frame x="0" y="0" width="1024" height="768">
    <texture></texture>
  </frame>
  <frame_hint x="715" y="60" width="300" height="670">
    <texture>ui_icons_PDA_dialog</texture>
  </frame_hint>

  <hint_name x="740" y="67" width="250" height="35">
    <text align="c" font="letterica18" r="255" g="255" b="255" complex_mode="1">hint_name_text</text>
  </hint_name>

  <hint_caption x="740" y="105" width="250" height="350">
    <text align="c" font="letterica16" r="255" g="255" b="255" complex_mode="1">hint_caption_text</text>
  </hint_caption>

  <hint_caption_adv x="740" y="105" width="250" height="350">
    <text align="c" font="letterica16" r="255" g="255" b="255" complex_mode="1">hint_caption_adv_text</text>
  </hint_caption_adv>
</window>