;-------------------Системные шрифты, используемые в движке----------------------
;Юзается в rs_stats, hud_adjust_mode, g_vertex_dbg, show_wnd_rect
;может юзаться через xml/скрипты: font="di" , GetFontDI()
;этому шрифту в движке запрещена регулировка размера

;Базовая секция шрифта. Здесь только имя шейдера и текстуры в высоком разрешении. В наследующих секциях шрифт меньшего размера получаем не текстурами меньшего разрешения, а просто уменьшая scale_x, scale_y
[font_base]
shader    = font ;Нигде не менять шейдер на hud\font! он замыливает буквы, особенно при увеличении размера.
texture   = ui\fonts\Bender

[stat_font]
shader                                   = font ;Нигде не менять шейдер на hud\font! он замыливает буквы, особенно при увеличении размера.
interval                                 = 0.75, 1
texture                                  = ui\fonts\ui_font_11
texture800                               = ui\fonts\ui_font_11
texture1600                              = ui\fonts\ui_font_11

scale_x                                  = 5.5
scale_y                                  = 5.5

;в движке нигде не юзается
;может юзаться через xml/скрипты: font="small" , GetFontSmall()
;конкретно в OGSR GA юзается в меню в версии мода/движка.

[hud_font_small]:stat_font

;Юзается в отладке зон g_zones_dbg
;может юзаться через xml/скрипты: font="medium" , GetFontMedium()

[hud_font_medium]
shader                                   = font
texture                                  = ui\fonts\ui_font_15
texture800                               = ui\fonts\ui_font_13
texture1600                              = ui\fonts\ui_font_17

;юзается в консоли, демо_рекорде
;этому шрифту в движке запрещена регулировка размера

[hud_font_di]:hud_font_medium
shader                                   = font

;юзается в консоли
;этому шрифту в движке запрещена регулировка размера

[hud_font_di2]:hud_font_di
shader                                   = hud\font2 ;Тут нужен именно этот шейдер потому что он отвечает за выделение текста в консоли по shift + стрелочки

