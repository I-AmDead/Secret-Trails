[wpn_vihlop]:class_sr_heavy
GroupControlSection		= spawn_group
discovery_dependency 		= 
$spawn 				= "weapons\svu"		; option for Level Editor
$npc				= on			; option for Level Editor
$prefetch 			= 8
scheduled 			= off 			; option for ALife Simulator
cform 				= skeleton
class 				= WP_SVU
description			= enc_arsenal_vihlop      

;--- scope weapons -----------------------------------------------------------------
holder_range_modifier	= 2.15               ; во сколько раз увеличивается eye_range 
holder_fov_modifier		= 0.3              ; во сколько раз увеличивается eye_fov
;-----------------------------------------------------------------------------------

cost				= 42000
weapon_class		= sniper_rifle

ammo_limit			= 60
ammo_current		= 60
ammo_elapsed		= 10
ammo_mag_size		= 5
                       	
ammo_class			= ammo_12.7x108

fire_modes			= 1

hand_dependence 		= 2
single_handed		= 0

animation_slot		= 8			; type of the animation that will be used

inv_name			= ars-vihlop         
inv_name_short		= ars-vihlop
inv_weight			= 7

inv_grid_width     = 6
inv_grid_height    = 2
inv_grid_x         = 46
inv_grid_y         = 39


;спавнить автоматически боеприпасы при подъеме оружия
auto_spawn_ammo			= false

sprint_allowed			= true

;-----------------------------------------------------------------------------------
;базовая дисперсия
fire_dispersion_base		= 0.00229 		; угол (в градусах) базовой дисперсии оружия (оружия зажатого в тисках)

;отдача
cam_dispersion 			= 0.3			; увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc		= 0.1			; увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 0.25		; ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 2.0			; максимальный угол отдачи
cam_max_angle_horz		= 1.0			; (degree) maximum shot horizontal degree 
cam_step_angle_horz		= 1.0			; (degree) size of step camera moved in horizontal position while shooting
;-----------------------------------------------------------------------------------

direction 			= 0, 0, 1
fire_point              = -0.035, 0.225, 0.572 
fire_point2             = 0.0, 0.128, 0.522 

smoke_particles		= weapons\generic_shoot_00

shell_point		 	= 0.0, 0.218, -0.15 
shell_dir		 	= 0.0, 0.0, 0.4
shell_particles	 	= weapons\arsenal_shells1

; ttc
hit_rate	            = 2.0
rpm                     = 180
; end ttc

hud 				= wpn_vihlop_hud
normal 			= 0, 1, 0
position 			= -0.022, -0.177, 0.010
orientation 		= 0, 0, 0

;--STRAP PARAMETERS-----------------------------------------------------------------
;под мышкой
strap_position 		= -0.26,-0.11,0.25	; position (offset) and orientation of the weapon when it is strapped
strap_orientation 	= -15,-9,110		; (3rd person view in degrees)
strap_bone0			= bip01_spine2
strap_bone1			= bip01_spine1

visual 				= weapons\vssk\wpn_vihlop_new.ogf                                                    

light_disabled			= true

ph_mass			 	= 5

;addons
scope_status			= 1
silencer_status			= 1
grenade_launcher_status		= 0

zoom_enabled		= true
scope_texture		= Arsenal_Mod\Crosshairs\scope_pks07   ;scope_vihlop.dds

silencer_name  			= wpn_addon_sil_762_ar
silencer_x                    = 220		; offset in inventory icon
silencer_y                    = 9

;------------------------------ S.T.A.L.K.E.R`s sound remake ------------------------------
;звуки
snd_draw					= weapons\vintorezer\vintorez_draw
snd_holster					= weapons\rifle_holster
snd_shoot					= weapons\vssk_shot 
snd_shoot1			        = weapons\vssk_shot
snd_shoot2			        = weapons\vssk_shot
snd_shoot3			        = weapons\vssk_shot 
snd_empty					= weapons\ak_empty, 0.5
snd_reload					= weapons\vintorezer\vintorez_reload, 1.0, 1.0
snd_close				    = weapons\generic_close
snd_silncer_shot		    = weapons\vssk_shot
;------------------------------------------------------------------------------------------

;silencer_flame_particles 	= weapons\generic_weapon01
silencer_smoke_particles 	= weapons\generic_shoot_00

silencer_hit_power 		= 1.32
silencer_hit_impulse	 	= 95
silencer_fire_distance 		= 1000
silencer_bullet_speed	 	= 1250

silencer_light_color		= 0.6, 0.5, 0.3
silencer_light_range		= 2
silencer_light_var_color	= 0.05
silencer_light_var_range	= 0.5
silencer_light_time 		= 0.2

