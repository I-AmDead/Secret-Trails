visual 			= weapons\vssk\wpn_vihlop_new_hud.ogf               

anim_holster		= holster
anim_idle			= idle
anim_idle_aim		= idle
anim_reload			= reload
anim_draw			= draw
anim_shoot			= shoot
anim_idle_sprint	      = idle_sprint

;-----------------------------------------------------------------------------
;смещения HUD для режима приближения
zoom_offset			        = -0.116800,0.039800,-0.204000
zoom_rotate_x		        = 0.041200
zoom_rotate_y		        = 0.036000

;-----------------------------------------------------------------------------
;прячем перекрестие прицела в зуме
