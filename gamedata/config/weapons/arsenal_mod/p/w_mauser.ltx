[wpn_mauser]:class_pistol_auto,hud_wpn_fx.bizon
GroupControlSection		= spawn_group
discovery_dependency 		= 
$spawn 				= "weapons\pm"		; option for Level Editor
$npc				= on			; option for Level Editor
$prefetch 			= 8
scheduled 			= off 			; option for ALife Simulator
cform 				= skeleton      
class 				= WP_LR300
description				= arsenal_mod-c96 

;-----------------------------------------------------------------------------------
holder_range_modifier		= 1.0 			; во сколько раз увеличивается eye_range 
holder_fov_modifier		= 1.5 			; во сколько раз увеличивается eye_fov
;-----------------------------------------------------------------------------------
weapon_class			= assault_rifle
cost				= 2800
 
ammo_limit			= 120
ammo_current			= 120
ammo_elapsed			= 10
ammo_mag_size			= 20

ammo_class			= ammo_7.62x25_p, ammo_7.62x25_ps
                	
hand_dependence			= 1
single_handed			= 1

fire_modes				= 1, -1

animation_slot		= 1			; type of the animation that will be used

inv_name				= ars-c96 ;ars-mauser712
inv_name_short			= ars-c96 ;ars-mauser712
inv_weight			= 1.25

inv_grid_width     = 3
inv_grid_height    = 1
inv_grid_x         = 48
inv_grid_y         = 54

;спавнить автоматически боеприпасы при подъеме оружия
;auto_spawn_ammo		= false

;-----------------------------------------------------------------------------------
;отдача
cam_dispersion          	= 0.15	;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc		= 0.03	;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 1.0	;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 4.0	;максимальный угол отдачи
cam_max_angle_horz		= 6.0	;(degree) maximum shot horizontal degree 
cam_step_angle_horz		= 0.12	;(degree) size of step camera moved in horizontal position while shooting
;-----------------------------------------------------------------------------------

direction 			= 0, 0, 1
fire_point               	= 0.0, 0.138, 0.3

flame_particles			= weapons\generic_weapon03
smoke_particles			= weapons\generic_shoot_00

shell_point		 	= 0.00, 0.14, 0.07
shell_dir		 	= 0.0, 0.002, 0.4
shell_particles	 		= weapons\arsenal_shells1

; ttc
hit_rate	            = 1.85
bullet_speed			= 415	;начальная скорость пули
rpm 				= 900
rpm_empty_click 	 	= 150
; end ttc

hud 				= wpn_mauzer20_hud
normal 				= 0, 1, 0
position                 	= -0.021, -0.065, 0.0
orientation 			= 0, 0, 1

;--STRAP PARAMETERS-----------------------------------------------------------------
;strap_position 		= -0.1, -0.45, 0.2		; position (offset) and orientation of the weapon when it is strapped
;strap_orientation 		= 1.57, 0, 0			; (3rd person view)
;strap_bone0			= bip01_spine2
;strap_bone1			= bip01_spine1

visual                   	= weapons\mauzer\wpn_mauzer20.ogf 

light_color		 	= 0.6, 0.5, 0.3
light_var_color		= 0.05
light_time 		 	= 0.2

ph_mass			 	= 1

;addons
scope_status			= 0
silencer_status			= 2    ;;Приклад
grenade_launcher_status		= 0

zoom_enabled			= true

silencer_name 		= wpn_addon_c96_priklad 
silencer_x 			= -26						
silencer_y 			= 5					

;sounds (name of the sound, volume (0.0 - 1.0), delay (sec))
snd_draw					= weapons\bull\sw_draw, 1.0, 0.15  
snd_holster					= weapons\bull\sw_host, 1.0, 0.32 
snd_shoot					= weapons\c96\c96_shoot 
snd_empty					= weapons\beretta\beretta_empty
snd_reload					= weapons\c96\c96_reload
snd_close					= weapons\beretta\beretta_close
snd_silncer_shot				= weapons\beretta\beretta_shoot

silencer_flame_particles 	= weapons\generic_weapon01
silencer_smoke_particles 	= weapons\generic_shoot_00

silencer_hit_power		= 0.75
silencer_hit_impulse	 	= 64
silencer_fire_distance 		= 80
silencer_bullet_speed	 	= 430

silencer_light_color		= 0.6, 0.5, 0.3
silencer_light_range		= 0.01
silencer_light_var_color	= 0.05
silencer_light_var_range	= 0.5
silencer_light_time 		= 0.2

