[wpn_pb]:class_pistol,hud_wpn_fx.pb
GroupControlSection		= spawn_group
discovery_dependency		= 
$spawn 				= "weapons\pb"	; option for Level Editor
$npc				= on		; option for Level Editor
$prefetch 			= 8             
scheduled 	 		= off 		; option for ALife Simulator
cform 	 			= skeleton
class 	 			= WP_PM
description			= enc_weapons1_wpn-pb

;-----------------------------------------------------------------------------------
holder_range_modifier		= 1.0 		; во сколько раз увеличивается eye_range 
holder_fov_modifier		= 1.5 		; во сколько раз увеличивается eye_fov
;-----------------------------------------------------------------------------------

cost				= 300
 
ammo_limit			= 120
ammo_current		= 120
ammo_elapsed		= 8
ammo_mag_size		= 8

ammo_class			= ammo_9x18_pmm, ammo_9x18_fmj
tracers				= off
f_mode				= 1	
hand_dependence			= 1
single_handed			= 1

animation_slot			= 1		; type of the animation that will be used

inv_name			= wpn-pb
inv_name_short		= wpn-pb
inv_weight			= 0.97
	
icon_name = icon_pb	
inv_grid_width				= 2
inv_grid_height				= 1
inv_grid_x					= 15
inv_grid_y					= 6


;спавнить автоматически боеприпасы при подъеме оружия
auto_spawn_ammo			= false

;-----------------------------------------------------------------------------------
;отдача
cam_dispersion 			= 0.3		;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc		= 0.0		;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 0.15		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 6.0		;максимальный угол отдачи
cam_max_angle_horz		= 8.0		;(degree) maximum shot horizontal degree 
cam_step_angle_horz		= 0.25		;(degree) size of step camera moved in horizontal position while shooting
;-----------------------------------------------------------------------------------

direction           	    			= 0, 0, 1
fire_point          	    			= 0.0, 0.104, 0.273

smoke_particles					= amik\weapons\smoke_particles\p_smoke_particles_02

shell_point		 			= 0.0, 0.104, 0.03
shell_dir		 			= 0.0, 0.0, 0.4
shell_particles	 				= amik\weapons\9x18_shells_r

;;;;;;;  Для Народной солянки 2010
hit_rate	            = 1.80
rpm_empty_click 				= 200
; end ttc

hud 	 			= wpn_pb_hud
normal                   			= 0, 1, 0
position         	        		= -0.021, -0.07, 0.0
orientation      	        		= 0, 0, 0

;--STRAP PARAMETERS-----------------------------------------------------------------
;strap_position 		= -0.1,-0.45,0.2			; position (offset) and orientation of the weapon when it is strapped
;strap_orientation 		= 1.57,0,0						; (3rd person view)
;strap_bone0			= bip01_spine2
;strap_bone1			= bip01_spine1

visual           				= weapons\pb\wpn_pb.ogf

light_disabled			= true

ph_mass			 	= 1

;addons
scope_status			= 0
silencer_status			= 1
grenade_launcher_status		= 0

zoom_enabled			= true

silencer_hit_power		= 0.53
silencer_hit_impulse	 	= 42
silencer_fire_distance 		= 55
silencer_bullet_speed	 	= 310

silencer_smoke_particles 			= amik\weapons\smoke_particles\p_smoke_particles_02
silencer_light_color				= 0.6,0.5,0.3
silencer_light_range				= 0.01
silencer_light_var_color			= 0.05
silencer_light_var_range			= 0.5
silencer_light_time 				= 0.2

snd_draw					= weapons\pb\pb_draw
snd_holster					= weapons\pb\pb_holster
snd_shoot					= weapons\pb\pb_shoot, 1.8
snd_empty					= weapons\pb\pb_empty
snd_reload					= weapons\pb\pb_reload;, 0.2
snd_close					= weapons\pb\pb_close
snd_silncer_shot				= weapons\pb\pb_shoot, 1.8 

