[torch_definition]
range           = 30							; range                 <in meters> ; дистанция в метрах.
range_r2        = 30							; range                 <in meters> ; дистанция в метрах (для динамического освещения).
color           = 1.0,1.0,1.0,0.2				; four color components <r,g,b,a> 0.f<X<3.f  ; цвет, из 4 компонентов значением от 0 до 3.
color_r2        = 1.0,1.0,1.0,0.2				; four color components <r,g,b,a> 0.f<X<3.f  ; цвет, из 4 компонентов значением от 0 до 3 (для динамического освещения).
omni_range      = 1.5									; range                 <in meters>
omni_range_r2   = 0.75									; range                 <in meters>
omni_color      = 0.60,0.60,0.10,0					; four color components <r,g,b,a> 0.f<X<3.f ; цвет фонариков неписей, из 4 компонентов значением от 0 до 3.
omni_color_r2   = 1, 1, 1, 0 ;0.60,0.65,0.10,0	; four color components <r,g,b,a> 0.f<X<3.f ; цвет фонариков неписей, из 4 компонентов значением от 0 до 3 (для динамического освещения).
color_animator  = empty							; color animator name   (empty - not using animator) ; цвет аниматора (empty - аниматор не используется).
spot_texture    = internal\internal_light_torch_r2 		                  ; spot texture name     (using only in Second Render) ; текстура яркой точки (для динамического освещения).
spot_angle      = 75									; spot angle            <in gradus>
glow_texture    = glow\glow_torch_r2			            ; glow texture name     (required) ; текстура свечения фонарика, когда он направлен в глаза (обязательный параметр).
glow_radius     = 0.3									; glow radius           <in meters>
guide_bone      = lights_bone						; guid bone name        (required) ; кость, к направлению которой привязывается фонарик (изменять строго не рекомендуется).