	<dialog id="general_pda_talk" pda="1">
	<precondition>dialogs.is_bad_relation</precondition>
	<phrase_list>
	   	<phrase id="0">
			<text>Привет. Есть свободная минутка?</text>
			<next>1</next>
			<next>11</next>
		</phrase>                                                                                               
