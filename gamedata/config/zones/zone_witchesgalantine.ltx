[zone_witches_galantine]
GroupControlSection = spawn_group_zone
$spawn      = "zones\witches galantine"
$prefetch     = 16
class     = ZS_ELECT
script_binding = ogse_dbg_anomaly_binder.init

hit_impulse_scale = .03
effective_radius  = 0.75 ;размер радиуса в процентах от оригинального, где действует зона
sound     = zone_mosquito_bald
postprocess   = postprocess_electra_mine

ef_anomaly_type     = 1
ef_weapon_type      = 13

artefacts   = af_electra_sparkler, 0.46, af_electra_flash, 0.36, af_electra_moonlight, 0.1, af_spirit_1, 0.04, af_spirit_2, 0.02, af_spirit_3, 0.01, af_spirit_4, 0.005, af_buliz, 0.005
BirthProbability = 0.05

;----------- Anomaly settings -----------------------
min_start_power   = 0.99
max_start_power   = 1.00
attenuation     = 1
period        = 1
min_artefact_count  = 0
max_artefact_count  = 0

idle_particles		= zones_mine\zone_electric_mine_idle
blowout_particles = anomaly2\electra2_blast

hit_small_particles			= anomaly2\electra_entrance_small
hit_big_particles			= anomaly2\electra_damage_02_smoke
idle_small_particles		= anomaly2\electra_damage_01_smoke
idle_big_particles			= anomaly2\electra_damage_02_smoke
entrance_small_particles	= anomaly2\electra_entrance_small
entrance_big_particles		= anomaly2\emi_entrance_big_00

idle_sound      = anomaly\electra_idle1; anomaly_gravy_idle
blowout_sound   = anomaly\electra_blast1
hit_sound     = anomaly\electra_hit
entrance_sound    = anomaly\electra_hit

blowout_light				= on
light_color				= 0.6,0.7,1
light_range				= 30.0
light_time				= 1;0.35
light_height				= 1.5     ;подъем источника света на высоту

light_volumetric_enable			= true
light_volumetric_quality		= 0.9
light_volumetric_intensity		= 0.2
light_volumetric_distance		= 0.55

idle_light				= off
idle_light_color			= 0.4,0.5,1
idle_light_anim				= koster_01_electra
idle_light_shadow			= false
idle_light_range			= 1.0
idle_light_range_delta 			= 0.1
idle_light_height			= 0.75			;подъем источника света на высоту

idle_light_volumetric_enable		= true
idle_light_volumetric_quality		= 0.9
idle_light_volumetric_intensity		= 0.2
idle_light_volumetric_distance		= 0.7

hit_type    = shock

disable_time    = 50  ;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small  = 500   ;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time = 100 ;время отключения idle партиклов

awaking_time    = 100
blowout_time		= 1000
accamulate_time		= 1000

ignore_nonalive   = false
ignore_small    = false
ignore_artefacts  = true

visible_by_detector = on

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ветер
blowout_wind    = off

blowout_wind_time_start     = 0
blowout_wind_time_peak      = 150
blowout_wind_time_end   = 299
blowout_wind_power      = 0.2     ;сила поднимаего ветра (от 0 до 1), в момент blowout_wind_time_peak 

shape_transp_color		= 255, 0, 0, 60
shape_edge_color		= 32, 32, 32, 255

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off

is_anomaly = true
anomaly_recipes = info_amk_recipt_soul_bengal, info_amk_recipt_tears_electra, info_amk_recipt_grandmother_glassbeards, info_amk_recipt_dummy_fire, info_amk_recipt_dummy_bright, info_amk_recipt_dummy_moon, info_amk_recipt_electra_dikoobraz

