[fireball_zone]
GroupControlSection			= spawn_group_zone
$spawn						= "zones\fireball"
;$prefetch 					= 8
class						= Z_TORRID
hit_impulse_scale			=   0
effective_radius			= 2.75 ;размер радиуса в процентах от оригинального, где действует зона
postprocess					= postprocess_new

ef_anomaly_type				= 1
ef_weapon_type				= 13

artefacts		= 
BirthProbability = 0.0

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

idle_particles				= anomaly2\heat_02_blaze
blowout_particles			= anomaly2\heat_03_blaze

hit_small_particles	    	= damage_fx\burn_creatures
hit_big_particles			= damage_fx\burn_creatures00
idle_small_particles		= damage_fx\burn_creatures
idle_big_particles			= damage_fx\burn_creatures00

idle_particles_dont_stop	= true;

idle_sound					= anomaly\fireball_idle		;постоянный звук
blowout_sound				= anomaly\fireball_blow	   	;во время выброса(удара) в центре аномалии	
hit_sound					= ambient\fire2				;на персонаже, когда тот получает хит
entrance_sound				= ambient\fire2				;при попадании объекта в аномалию

hit_type					= burn

disable_time		= 0	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 0	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 50000	;время отключения idle партиклов

ignore_nonalive		= true
ignore_small		= true
ignore_artefacts	= true

blowout_light		= on
light_color		    = 1.8,1.7,1.4
light_range		    = 15.0
light_time 		    = 2
light_height		= 0.75			;подъем источника света на высоту

light_volumetric_enable			= true
light_volumetric_quality		= 0.9
light_volumetric_intensity		= 0.03
light_volumetric_distance		= 0.65

idle_light			= on
idle_light_range	= 15.0
idle_light_range_delta  = 0.2
idle_light_anim		= koster_01
idle_light_height	= 0.75			;подъем источника света на высоту

idle_light_volumetric_enable		= true
idle_light_volumetric_quality		= 0.9
idle_light_volumetric_intensity		= 0.03
idle_light_volumetric_distance		= 0.7

awaking_time		= 100
blowout_time		= 100
accamulate_time		= 100

visible_by_detector = off

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off

shape_transp_color		= 255, 0, 0, 60
shape_edge_color		= 32, 32, 32, 255


