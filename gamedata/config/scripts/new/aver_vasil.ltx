[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = {+vasil_mesto} remark@vasil, {+vasil_mesto} remark@vasil_start, {+vas1_dialog_start} walker@vasil2, walker@vasil
danger = danger_condition@vasil

[walker@vasil]
path_walk = vasil_walk1
path_look = vasil_look1
danger = danger_condition@vasil
meet = meet
on_info = {+vas1_dialog_start} walker@vasil2

[walker@vasil2]
path_walk = vasil_walk2
path_look = vasil_look2
danger = danger_condition@vasil
def_state_moving1 = run
def_state_moving2 = run
def_state_moving3 = run
meet = no_meet
on_info = {+vasil_mesto} remark@vasil_start

[remark@vasil_start]
anim = guard
target = actor
meet = meet
combat_ignore_cond = always
danger = danger_condition@vasil

[danger_condition@vasil]
ignore_distance = 0
ignore_distance_corpse = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
