[smart_terrains]
none = true

[logic]
active = camper@grek
on_death = death
on_hit = hit@grek

[camper@grek]
path_walk = grek_walk
path_look = grek_look
meet = meet@grek
danger = danger_condition@grek
on_info = {+grek_start_dialog_done} walker@grek

[walker@grek]
path_walk = grek_walk1
path_look = grek_look1
meet = no_meet
def_state_moving1 = assault
def_state_moving2 = assault
def_state_moving3 = assault
panic = 0
danger = danger_condition@grek
on_signal = razgovor | remark@grek1

[remark@grek1]
target = actor
meet = meet@grek
combat_ignore_cond = always
danger = danger_condition@grek
on_info = {+grek_ohota_dialog_done} remark@grek2

[remark@grek2]
target = actor
meet = no_meet
combat_ignore_cond = always
danger = danger_condition@grek
on_timer = 4000 | walker@grek2

[walker@grek2]
path_walk = grek_walk
path_look = grek_look
meet = no_meet
danger = danger_condition@grek

[danger_condition@grek]
ignore_distance = 0
ignore_distance_corpse = 0

[meet@grek]
use = true
use_wpn = false
meet_talk_enabled = true

[hit@grek]
on_info = %+grek_hit%

[death]
on_info = %+grek_dead%