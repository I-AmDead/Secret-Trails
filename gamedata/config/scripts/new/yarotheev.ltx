[smart_terrains]
none = true

[logic]
active=sleeper@yarotheev
;danger = danger_ignore@yarotheev
combat_ignore = combat_ignore
on_death = death@yarotheev
on_hit = hit@yarotheev

[sleeper@yarotheev]
path_main = yarotheev_walk
combat_ignore_cond = always
meet = no_meet
danger = danger_condition@yarotheev
on_actor_dist_le_nvis = 5 | remark@yarotheev

[remark@yarotheev]
anim = guard
target = actor
snd = yarotheev_hello
combat_ignore_cond = always
on_signal = sound_end| remark@yarotheev2
meet = no_meet

[remark@yarotheev2]
anim = guard
target = actor
combat_ignore_cond = always
meet = meet@yarotheev
on_info = {+mayor_yarofeev_vrag} walker@yarotheev

[walker@yarotheev]
path_walk = yarotheev_walk
path_look = yarotheev_look
def_state_standing = assault
;danger = danger_condition@yarotheev

[danger_condition@yarotheev]
ignore_distance = 0

[death@yarotheev]
on_info = %+mayor_yarofeev_dead%

[hit@yarotheev]
on_info = %+mayor_yarofeev_hit%

[meet@yarotheev]
meet_state		= 15|guard@wait
meet_state_wpn	= 15|backoff@threat_weap
victim		= 15|actor
victim_wpn		= 15|actor
use			= true
use_wpn		= false
syndata		= backoff@threat_weap

[combat_ignore]
combat_ignore_cond = always