[smart_terrains]
none = true

[logic]
active = walker@iuda
combat_ignore = combat_ignore
danger = danger_condition@iuda
on_hit = hit@iuda

[walker@iuda]
path_walk = iuda_walk
path_look = iuda_look
combat_ignore_cond = always
danger = danger_condition@iuda
def_state_standing = assault
meet = no_meet
on_actor_dist_le_nvis = 30 | {+monolit_bunker_doc_have -monolit_bunker_doc_done} remark@iuda1, {+monolit_bunker_doc_done} walker@iuda2

[remark@iuda1]
anim = assault
snd = iuda
target = actor
combat_ignore_cond = always
danger = danger_condition@iuda
meet = no_meet
on_signal = sound_end | walker@iuda2 %=killactor%

[walker@iuda2]
path_walk = iuda_walk
path_look = iuda_look
meet = no_meet
def_state_standing = assault
danger = danger_condition@iuda

[meet]
use = true
use_wpn = false
meet_talk_enabled = true

[danger_condition@iuda]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore_cond = always

[hit@iuda]
on_info = {=hit_by_actor} %=killactor%
