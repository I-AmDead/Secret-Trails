[logic]
active                                   = walker@gar_lapsha_start
on_death                                 = death@lapsha

[walker@gar_lapsha_start]
path_walk                                = gar_lapsha_walk
path_look                                = gar_lapsha_look
combat_ignore_cond                       = always
meet                                     = meet@lapsha
danger                                   = danger_ignore@atp_stalker
