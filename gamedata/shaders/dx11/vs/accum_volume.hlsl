uniform float4x4 m_texgen;

//////////////////////////////////////////////////////////////////////////////////////////
// Vertex
p_screen_volume main(float4 P : POSITION)
{
    p_screen_volume O;

    O.HPos = mul(m_WVP, P);
    O.Tex0 = mul(m_texgen, P);

    return O;
}
