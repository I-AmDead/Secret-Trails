#include "common.h"
#include "sload.h"
#include "common_brdf.h"

// SSS Settings
#include "settings_screenspace_FLORA.h"

f_deffer main(p_bumped I)
{
    surface_bumped S = sload(I);

#ifdef USE_AREF
    hashed_alpha_test(I.tcdh.xy, S.base.a);
#endif

// FLORA FIXES & IMPROVEMENTS - SSS Update 18
#if USE_AREF && USE_BUMP
    S.normal.xy += float2(.02f, .02f);
    S.normal.xy *= max(5.0f * rain_params.y, 3.0f);
    float3 Ne = mul(m_WV, (float3(S.normal.x, 1.0f, S.normal.y)));
#else
    // Sample normal, rotate it by matrix, encode position
    float3 Ne = mul(float3x3(I.M1, I.M2, I.M3), S.normal);
#endif

    Ne = normalize(Ne);

#if USE_AREF && USE_BUMP
    // Material value ( MAT_FLORA )
    float ms = MAT_FLORA;

    // Gloss
    S.gloss = lerp(ssfx_florafixes_1.z, ssfx_florafixes_1.w, rain_params.y);
#else
    // hemi, sun, material
    float ms = xmaterial;
#endif

#ifdef USE_LM_HEMI
    float4 lm = s_hemi.Sample(smp_rtlinear, I.lmh);
    float h = get_hemi(lm);
#else
    float h = I.position.w;
#endif

    f_deffer O = pack_gbuffer(float4(Ne, h), float4(I.position.xyz + Ne * S.height * def_virtualh, ms), float4(S.base.rgb, S.gloss));

    O.Velocity = get_motion_vector(I.hpos_curr, I.hpos_old);

    return O;
}
