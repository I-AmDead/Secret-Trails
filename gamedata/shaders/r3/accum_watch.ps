#include "common.h"

float4 main(p_flat I) : SV_Target
{
    // diffuse
    float3 D = s_base.Sample(smp_base, I.tcdh); // IN:  rgb.a
    D = SRGBToLinear(D);

    float brightness = 0.2;
    float4 color = float4(D.rgb, 1.0);

    color.x *= 0.0;
    color.y *= 0.0;
    color.z *= 0.0;
    color.w *= 0.3;

    return color;
}